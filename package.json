{
  "name": "gun-lol-clone",
  "version": "1.0.0",
  "description": "Modern interactive web application inspired by gun.lol/zyo.lol with Next.js, NestJS, Three.js, and Anime.js",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend start:dev\"",
    "build": "pnpm --filter shared build && pnpm --filter backend build && pnpm --filter frontend build",
    "start": "concurrently \"pnpm --filter backend start:prod\" \"pnpm --filter frontend start\"",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "lint:fix": "pnpm --filter frontend lint:fix && pnpm --filter backend lint:fix",
    "format": "npx prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "npx prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm --filter frontend test && pnpm --filter backend test",
    "test:e2e": "pnpm --filter frontend test:e2e",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npx eslint --fix",
      "npx prettier --write"
    ],
    "backend/**/*.{ts,js}": [
      "cd backend && npx eslint --fix",
      "npx prettier --write"
    ],
    "shared/**/*.{ts,js}": [
      "npx prettier --write"
    ],
    "*.{json,md}": [
      "npx prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
